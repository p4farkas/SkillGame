<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oenik.bir.skillgame" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/game_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main_menu.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main_menu.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".main_menu.ConnectActivity"
            android:label="@string/title_activity_connect" >
        </activity>
        <activity
            android:name=".game_files.ShootingActivity"
            android:label="@string/title_activity_shooting" >
        </activity>
        <activity
            android:name=".game_files.SolveItActivity"
            android:label="@string/title_activity_solve_it" >
        </activity>
        <activity
            android:name=".game_files.RajzolgatoActivity"
            android:label="Rajzolgato" >
        </activity>
        <activity
            android:name=".game_files.SzinvalasztoActivity"
            android:label="Szinvalaszto" >
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>
