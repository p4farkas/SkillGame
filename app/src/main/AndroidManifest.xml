<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oenik.bir.skillgame" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/game_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".ConnectActivity"
            android:label="@string/title_activity_connect" >
        </activity>
        <activity
            android:name=".ShootingActivity"
            android:label="@string/title_activity_shooting" >
        </activity>
        <activity
            android:name=".SolveItActivity"
            android:label="@string/title_activity_solve_it" >

        </activity>
    </application>

</manifest>
