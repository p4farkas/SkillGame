<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.uniobuda.nik.androgamers" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main_menu.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main_menu.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".main_menu.ConnectActivity"
            android:label="@string/title_activity_connect"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".game_files.ShootingActivity"
            android:label="@string/title_activity_shooting"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".game_files.SolveItActivity"
            android:label="@string/title_activity_solve_it"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".game_files.RajzolgatoActivity"
            android:label="Rajzolgato"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".game_files.SzinvalasztoActivity"
            android:label="Szinvalaszto"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".main_menu.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
    </application>

</manifest>
