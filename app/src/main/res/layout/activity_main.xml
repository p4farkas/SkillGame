<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background_animation"
    tools:context="com.oenik.bir.skillgame.MainActivity">

    <Button
        android:id="@+id/start_button"
        android:text="@string/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/profil_button"
        android:text="@string/profil_button"
        android:layout_below="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/info_button"
        android:text="@string/info_button"
        android:layout_below="@+id/profil_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
